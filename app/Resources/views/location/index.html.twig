{% extends 'base.html.twig' %}

{% block body %}
    <h1>Locations list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Roadnumber</th>
                <th>Roadname</th>
                <th>Suburb</th>
                <th>Village</th>
                <th>City</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td><a href="{{ path('location_show', { 'id': location.id }) }}">{{ location.id }}</a></td>
                <td>{{ location.roadNumber }}</td>
                <td>{{ location.roadName }}</td>
                <td>{{ location.suburb }}</td>
                <td>{{ location.village }}</td>
                <td>{{ location.city }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('location_show', { 'id': location.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('location_edit', { 'id': location.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn" href="{{ path('location_new') }}" role="button">Create a new location</a>
        </li>
    </ul>
{% endblock %}
