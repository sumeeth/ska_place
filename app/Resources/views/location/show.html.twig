{% extends 'base.html.twig' %}

{% block body %}
    <h1>Location</h1>
    <b>Current DateTime:</b> <span id="currentDateTime"></span>
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>Roadnumber</th>
                <td>{{ location.roadNumber }}</td>
            </tr>
            <tr>
                <th>Roadname</th>
                <td>{{ location.roadName }}</td>
            </tr>
            <tr>
                <th>Suburb</th>
                <td>{{ location.suburb }}</td>
            </tr>
            <tr>
                <th>Village</th>
                <td>{{ location.village }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ location.city }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('location_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('location_edit', { 'id': location.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
